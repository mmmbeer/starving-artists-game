{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": false,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["tests/**/*.ts", "server/src/**/*.ts", "shared/types/**/*.ts"]
}
